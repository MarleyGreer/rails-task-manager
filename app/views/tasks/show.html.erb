<h2><%= @task.title.capitalize %></h2>
<%= check_box("task", @task.id, {checked: @task.completed}) %>
<p><%= @task.details %></p>

<%= link_to "Delete Task", task_path(@task), method: :delete, data: { confirm: "Are you sure you wish to delete the task #{@task.title}?" } %>
<p class= "link"><%= link_to "Main Manu", tasks_path %></p>
<%= link_to "Edit", edit_task_path(@task)%>

